<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!--  Inherit Product variant  Form View to Modify it  -->
    <record id="product_variant_easy_edit_view_form_inher" model="ir.ui.view">
        <field name="name">product.view.form.easy.edit.view.form.inher</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock.product_product_view_form_easy_inherit_stock"/>
<!--        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>-->
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group[2]/group[@name='weight']" position="after">

                <group>
                    <label for="date_start" string="Date"/>
                    <div class="o_row">
                        <field name="date_start" widget="daterange" nolabel="1" class="oe_inline"
                               options="{'related_end_date': 'date_end'}"/>
                        <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                        <field name="date_end" widget="daterange" nolabel="1" class="oe_inline"
                               options="{'related_start_date': 'date_start'}"/>
                    </div>
                    <field name="student_id" widget="many2many_tags"/>

                </group>
                <group name='trainer_info' string="Trainer Details">
                    <field name="employee_id"/>
                    <field name="assistant_employee_id" widget="many2many_tags"/>
                </group>

            </xpath>

            <xpath expr="//form/sheet/group[2]" position="after">
                <group name="session_details">
                    <group>
                        <field name="no_of_class"/>
                        <label for="no_of_sessions" string="Sessions"/>
                        <div class="o_row">
                            <field name="no_of_sessions"/>
                            <span>Per</span>
                            <field name="session_based_on"/>
                        </div>
                    </group>

                </group>
                <group string="Select Days" attrs="{'invisible': [('session_based_on', '=', 'month')]}">
                    <!--                    <label for="days" string="Scheduled Days"/>-->
                    <group name="days">
                        <div class="o_row">
                            <span>Mon </span>
                            <field name="mon" eval="True"/>
                            <span attrs="{'invisible': [('mon', '=', False)]}">Time</span>
                            <field name="mon_time" widget="float_time" eval="True"
                                   attrs="{'invisible': [('mon', '=', False)]}"/>
                        </div>
                        <div class="o_row">
                            <span>Tue </span>
                            <field name="tue" eval="True"/>
                            <span attrs="{'invisible': [('tue', '=', False)]}">Time</span>
                            <field name="tue_time" widget="float_time" eval="True"
                                   attrs="{'invisible': [('tue', '=', False)]}"/>

                        </div>
                    </group>

                    <group>
                        <div class="o_row">
                            <span>Wed </span>
                            <field name="wed" eval="True"/>
                            <span attrs="{'invisible': [('wed', '=', False)]}">Time</span>
                            <field name="wed_time" widget="float_time" eval="True"
                                   attrs="{'invisible': [('wed', '=', False)]}"/>
                        </div>
                        <div class="o_row">
                            <span>Thu </span>
                            <field name="thu" eval="True"/>
                            <span attrs="{'invisible': [('thu', '=', False)]}">Time</span>
                            <field name="thu_time" widget="float_time" eval="True"
                                   attrs="{'invisible': [('thu', '=', False)]}"/>
                        </div>
                    </group>

                    <group>
                        <div class="o_row">
                            <span>Fri  </span>
                            <field name="fri" eval="True"/>
                            <span attrs="{'invisible': [('fri', '=', False)]}">Time</span>
                            <field name="fri_time" widget="float_time" eval="True"
                                   attrs="{'invisible': [('fri', '=', False)]}"/>
                        </div>
                        <div class="o_row">
                            <span>Sat </span>
                            <field name="sat" eval="True"/>
                            <span attrs="{'invisible': [('sat', '=', False)]}">Time</span>
                            <field name="sat_time" widget="float_time" eval="True"
                                   attrs="{'invisible': [('sat', '=', False)]}"/>
                        </div>
                    </group>

                    <group>
                        <div class="o_row">
                            <span>Sun </span>
                            <field name="sun" eval="True"/>
                            <span attrs="{'invisible': [('sun', '=', False)]}">Time</span>
                            <field name="sun_time" widget="float_time" eval="True"
                                   attrs="{'invisible': [('sun', '=', False)]}"/>
                        </div>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <!--Inherit Product tree view and add new filed like start date and End Date-->
    <record id="product_product_tree_view_inher" model="ir.ui.view">
        <field name="name">product.view.form.easy.edit.view.form.inher</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='price']" position="after">
                <field name="date_start"/>
                <field name="date_end"/>
            </xpath>
            <!--            <xpath expr="//tree/field[@name='price']" position="after">-->
            <!--                <field name="date_start"/>-->
            <!--                <field name="date_end"/>-->
            <!--            </xpath>-->
        </field>
    </record>

    <record id="view_stock_product_tree_inher" model="ir.ui.view">
        <field name="name">product.view.form.easy.edit.view.form.inher</field>
        <field name="model">product.product</field>
        <!--            <field name="groups_id" eval="[(4, ref('techbot_sports_management_system.group_sports_trainers'))]"/>-->
        <field name="inherit_id" ref="stock.view_stock_product_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='qty_available']" position="attributes">
                <attribute name="string">Seat Available</attribute>
            </xpath>
        </field>
    </record>


    <record id="view_stock_quant_tree_inventory_editable_inher" model="ir.ui.view">
        <field name="name">view.stock.quant.tree.inventory.editable.inher</field>
        <field name="model">stock.quant</field>
        <!--            <field name="groups_id" eval="[(4, ref('techbot_sports_management_system.group_sports_trainers'))]"/>-->
        <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='quantity']" position="attributes">
                <attribute name="string">Seat Available</attribute>
            </xpath>

            <xpath expr="//tree/field[@name='inventory_quantity']" position="attributes">
                <attribute name="string">Assign Seats</attribute>
            </xpath>
        </field>
    </record>


</odoo>


