<odoo>


    <!-- Action for SESSION -->
    <record model="ir.actions.act_window" id="session_list_action">
        <field name="name">Sessions</field>
        <field name="res_model">sports.management.session</field>
        <field name="view_mode">tree,form,calendar,gantt,graph,kanban</field>

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Session in your address book
            </p>
<!--            <p>-->
<!--                Odoo helps you track all activities related to your contacts.-->
<!--            </p>-->

        </field>
    </record>

        <!-- Action for Student Class -->
    <record model="ir.actions.act_window" id="student_class_list_action">
        <field name="name">Class</field>
        <field name="res_model">student.class</field>
        <field name="view_mode">tree,form,kanban</field>

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Class in your address book
            </p>
<!--            <p>-->
<!--                Odoo helps you track all activities related to your contacts.-->
<!--            </p>-->

        </field>
    </record>




    <!-- Action Of Form, Tree & Kanban Views Of Student Details -->
    <record id="action_student_student_form_1" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.details</field>
        <field name="view_id" ref=""/>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Contact in your address book
            </p>
            <p>
                Odoo helps you track all activities related to your contacts.
            </p>

        </field>
    </record>


